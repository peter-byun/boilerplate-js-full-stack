{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "API_PORT",
    "DATABASE_HOST",
    "DATABASE_PORT",
    "DATABASE_USER",
    "DATABASE_PASSWORD",
    "DATABASE_NAME",
    "REDIS_HOST",
    "REDIS_PORT",
    "REDIS_PASSWORD"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {},
    "migration:create": {
      "cache": false
    },
    "migration:up": {
      "cache": false
    },
    "migration:down": {
      "cache": false
    },
    "migration:list": {
      "cache": false
    },
    "migration:pending": {
      "cache": false
    }
  }
}
